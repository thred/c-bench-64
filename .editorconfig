# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 4

[*.ts]
quote_type = double
ij_typescript_use_double_quotes = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
